<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    app:cardElevation="5dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutTop">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgAva"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:src="@drawable/imguser"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                />
            <com.mrt.transporter.customview.MyTextView
                android:id="@+id/idUser"
                android:layout_toRightOf="@+id/imgAva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minh Thien"
                android:layout_marginTop="11dp"
                android:layout_marginLeft="16dp"
                android:textSize="16sp"
                app:font="@string/fontRobotoMedium"
                />
            <com.mrt.transporter.customview.MyTextView
                android:id="@+id/tvSdt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idUser"
                android:layout_toRightOf="@id/imgAva"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="2dp"
                android:text="phone number"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>